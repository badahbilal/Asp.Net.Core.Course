 @model List<EditUsersRoleViewModel>

@{ 
    int counter = 0;
    ViewBag.Title = "Edit Role Users";
    Layout = "_Layout";
}

<div class="container">

    <form method="post" >
        <div class="ms-5">

            <div class="card">
                <div class="card-header">
                    add or remove users from this role
                    <hr />
                    <input disabled value="@ViewBag.idRole" class="form-control" />
                </div>
                <div class="card-body">

                    <h4>User in this Role</h4>

                    @for (int i = 0; i < Model.Count; i++)
                    { 
                        var uniqueName = "User" + ++counter;
                        <div class="form-check">
                            <input hidden asp-for="@Model[i].UserId" />
                            <input hidden asp-for="@Model[i].UserName" />
                            <input asp-for="@Model[i].IsSelected" id="@uniqueName" class="form-check-input" />
                            <label for="@uniqueName" class="form-check-label"> @Model[i].UserName </label>
                        </div>
                        
                    }

                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-success">Update</button>
                    <a asp-action="Edit" asp-route-id="@ViewBag.idRole" class="btn btn-secondary">Back To Role</a>
                    <div asp-validation-summary="All"></div>
                </div>
            </div>
        </div>
    </form>

</div>