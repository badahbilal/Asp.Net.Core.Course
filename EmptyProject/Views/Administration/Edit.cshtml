
@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
    Layout = "_Layout";
}

<div class="container">


    <div class="row">
        <h3>Edit Role</h3>

    </div>

    <div class="row">
        <form enctype="multipart/form-data" method="post">


            <div class="form-row">
                <div class="form-group">
                    <label asp-for="Id"></label>
                    <input type="text" disabled class="form-control col-12" asp-for="Id" />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label asp-for="RoleName"></label>
                    <input type="text" class="form-control col-12" asp-for="RoleName" />
                    <span asp-validation-for="RoleName" class="small text-danger"></span>
                </div>
            </div>


            <div class="form-row">
                <div class="form-group">
                    <button class="btn btn-primary" type="submit">Edit Role</button>
                    <a asp-action="ListRoles" class="btn btn-secondary">Cancel</a>
                </div>
            </div>

            @if (Model.Users.Count == 0)
            {


                <p>There is no user</p>
            }
            else
            {
                <ul>
                    @foreach (var item in Model.Users)
                    {
                        <li>@item</li>
                    }
                </ul>
            }



            <a asp-action="EditUsersRole" asp-route-idRole="@Model.Id" class="btn btn-primary">Add / Remove Users</a>
            <a asp-action="ListRoles" class="btn btn-secondary">Back To List</a>
        </form>
    </div>

    <div class="row">
        <div class='text text-danger' asp-validation-summary='All'></div>
    </div>
</div>
