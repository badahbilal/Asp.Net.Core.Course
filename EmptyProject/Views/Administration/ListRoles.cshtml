@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Roles";
    Layout = "_Layout";
}
<div class="container">
    <h1>List Roles</h1>
    <hr />
    <a class="btn btn-success" asp-action="CreateRole" asp-controller="Administration">Create Role</a>

    <hr />
    <table border="1">
        <thead>
            <tr>
                <td>Id</td>
                <td>Name</td>
                <td>actions</td>

            </tr>
        </thead>
        <tbody>
            @{
                foreach (IdentityRole role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                        <td>
                            <a class="btn btn-info" asp-action="Edit" asp-route-id="@role.Id">Update</a>
                            <a class="btn btn-danger" asp-action="Details" a asp-route-id="@role.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

